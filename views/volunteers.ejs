<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteers</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        .card {
            cursor: pointer;
            background-color: #C6F4C6; /* Lighter green background */
            color: #000000; /* Black text */
            height: auto; /* Auto height for cards */
            position: relative; /* Add this line */
        }
        .card:hover {
            background-color: #B3FFB3; /* Lighter green on hover */
        }
        .view-details-link {
            background-color: #FFFFFF; /* White background */
            color: #008000; /* Green text */
            padding: 10px;
            border: none;
            cursor: pointer;
            text-decoration: none; /* Remove underline */
        }
        .view-details-link.active {
            color: #FFFFFF; /* White text */
            background-color: #FFFFFF; /* White background */
            color: #008000; /* Green text */
            padding: 10px;
            border: none;
            cursor: pointer;
            text-decoration: none; /* Remove underline */
        }

        .cv-preview {
    width: 150px; /* Small preview size */
    height: 200px; /* Small preview size */
    border: 1px solid #CCCCCC;
    cursor: pointer; /* Add cursor pointer */
}   
        .cv-full-view {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80%; /* Large preview size */
            height: 80%; /* Large preview size */
            background-color: #FFFFFF;
            padding: 20px;
            border: none;
            z-index: 1000;
            display: none;
            text-align: center;
        }
        .cv-full-view img {
            width: 100%;
            height: 100%;
        }
        .card-number {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 24px;
            font-weight: bold;
        }

        .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 34px;
            font-weight: bold;
        }
        .btn{
           color:green
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Volunteers</h2>
        <% volunteers.forEach((volunteer, index) => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <span class="card-number"><%= index + 1 %></span>
                    <h5 class="card-title"><%= volunteer.volunteerName %></h5>
                    <a href="#" class="view-details-link" data-toggle="collapse" data-target="#collapse<%= index %>">View Details</a>
                    <div id="collapse<%= index %>" class="collapse mt-5">
                        <p class="card-text">Professional: <%= volunteer.professional %></p>
                        <p class="card-text">Work Mobile Phone: <%= volunteer.workMobilePhone %></p>
                        <p class="card-text">Email Address: <%= volunteer.emailAddress %></p>
                        <p class="card-text">Area of Interest: <%= volunteer.areaOfInterest %></p>
                        <p class="card-text">How Did You Find Us: <%= volunteer.howDidYouFindUs %></p>
                        <p class="card-text">CV: <a href="#" onclick="showCV('<%= volunteer.cvUpload %>')"><img src="/uploads/<%= volunteer.cvUpload %>" class="cv-preview"></a></p>
                        <a href="/uploads/<%= volunteer.cvUpload %>" download="<%= volunteer.cvUpload %>"><button class="btn">Download CV</button></a>
                    </div>
                </div>
            </div>
        <% }); %>
        <div id="cv-full-view" class="cv-full-view">
            <span class="close-btn" onclick="closeCV()">&times;</span>
            <img id="cv-image" src="" alt="CV Preview">
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script>
        function showCV(cvUrl) {
            document.getElementById('cv-full-view').style.display = 'block';
            document.getElementById('cv-image').src = '/uploads/' + cvUrl;
        }
        function closeCV() {
            document.getElementById('cv-full-view').style.display = 'none';
        }
        
$(document).ready(function() {
            $('.view-details-link').on('click', function() {
                $(this).toggleClass('active');
                if ($(this).hasClass('active')) {
                    $(this).text('Close Details');
                } else {
                    $(this).text('View Details');
                }
            });
        });
    </script>
</body>
</html>